<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet href="http://moise.sourceforge.net/xml/os.xsl" type="text/xsl" ?>

<organisational-specification id="organisation" os-version="0.8"

	xmlns='http://moise.sourceforge.net/os' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://moise.sourceforge.net/os
                        http://moise.sourceforge.net/xml/os.xsd'>

	<functional-specification>
		<scheme id="build_house_sch">
			<goal id="PaintHouse">
				<plan operator="sequence">
					<goal id="GetInputs" ttf="20 minutes" ds="prepare the site for the next tasks">
						<workload id="contract" value="2.00"/>
						<plan operator="sequence">
							<goal id="BuyInputs">
								<workload id="purchase" value="7.00"/>
								<workload id="document" value="10.00"/>
								<inform id="report" value="2.00" recipient="GetInputs"/>
								<inform id="register" value="2.00" recipient="GetInputs"/>
							</goal>
							<goal id="GetScaffold">
								<workload id="purchase" value="7.00"/>
								<workload id="document" value="10.00"/>
								<inform id="report" value="2.00" recipient="GetInputs"/>
							</goal>
						</plan>
					</goal>
					<goal id="Inspect">
						<workload id="inspection" value="8.00"/>
					</goal>
					<goal id="Financial">
						<workload id="billing" value="8.00"/>
						<plan operator="sequence">
							<goal id="Report">
								<workload id="calculus" value="8.00"/>
							</goal>
						</plan>
					</goal>
					<goal id="Paint">
						<plan operator="sequence">
							<goal id="PaintInt">
								<workload id="paint" value="8.00"/>
							</goal>
							<goal id="PaintExt">
								<workload id="paint" value="2.00"/>
								<workload id="scaffold" value="3.00"/>
							</goal>
						</plan>
					</goal>
				</plan>
			</goal>
		</scheme>
	</functional-specification>

</organisational-specification>
